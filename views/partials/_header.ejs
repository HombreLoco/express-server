<header>
  <h2>Tiny App</h2>

  <% if (username) { %>
    <%= username %>
    <form action="/logout" method="POST">
      <input type="submit" value="Logout">
    </form>
  <% } else { %>
    <form action="/login" method="POST">
      <label for="username">Username:</label>
      <input id="username" type="text" name="username">
      <input type="submit" value="Login">
    </form>
  <% } %>

</header>